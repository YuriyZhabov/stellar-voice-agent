# Voice AI Agent Configuration Template
# Copy this file to .env and configure the values for your environment

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================

# Application environment (development, staging, production)
ENVIRONMENT=development

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Enable debug mode (true/false) - DO NOT use in production
DEBUG=false

# =============================================================================
# DOMAIN AND NETWORK CONFIGURATION
# =============================================================================

# Your domain name for the voice AI agent
# Example: voiceai.example.com
DOMAIN=localhost

# Public IP address of your server (required for SIP configuration)
# Example: 203.0.113.1
PUBLIC_IP=127.0.0.1

# Port for the web server (default: 8000)
PORT=8000

# =============================================================================
# SIP CONFIGURATION (MTS Exolve or other SIP provider)
# =============================================================================

# Phone number assigned to your SIP trunk
# Example: +1234567890
SIP_NUMBER=

# SIP server hostname or IP address
# Example: sip.mts-exolve.com
SIP_SERVER=

# SIP authentication username
SIP_USERNAME=

# SIP authentication password
SIP_PASSWORD=

# SIP transport protocol (UDP, TCP, TLS)
SIP_TRANSPORT=UDP

# SIP port (default: 5060 for UDP/TCP, 5061 for TLS)
SIP_PORT=5060

# =============================================================================
# LIVEKIT CONFIGURATION
# =============================================================================

# LiveKit server URL
# Example: wss://your-livekit-server.com
LIVEKIT_URL=

# LiveKit API key (get from LiveKit Cloud dashboard)
LIVEKIT_API_KEY=

# LiveKit API secret (get from LiveKit Cloud dashboard)
LIVEKIT_API_SECRET=

# LiveKit SIP URI for incoming calls
# Example: sip:voice-ai@your-livekit-server.com
LIVEKIT_SIP_URI=

# =============================================================================
# AI SERVICES CONFIGURATION
# =============================================================================

# Deepgram API key for speech-to-text
# Get from: https://console.deepgram.com/
DEEPGRAM_API_KEY=

# Deepgram model to use (nova-2, nova, base)
DEEPGRAM_MODEL=nova-2

# Deepgram language code (en-US, en-GB, etc.)
DEEPGRAM_LANGUAGE=en-US

# OpenAI API key for language model
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# OpenAI model to use (gpt-4, gpt-3.5-turbo, etc.)
OPENAI_MODEL=gpt-4

# OpenAI organization ID (optional)
OPENAI_ORG_ID=

# Cartesia API key for text-to-speech
# Get from: https://cartesia.ai/
CARTESIA_API_KEY=

# Cartesia voice ID to use
CARTESIA_VOICE_ID=default

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================

# Maximum response latency in seconds (requirement: 1.5s)
MAX_RESPONSE_LATENCY=1.5

# Context window size for conversation history (tokens)
CONTEXT_WINDOW_SIZE=4000

# Maximum conversation duration in minutes
MAX_CONVERSATION_DURATION=30

# Number of retry attempts for failed API calls
RETRY_ATTEMPTS=3

# Retry backoff multiplier (exponential backoff)
RETRY_BACKOFF_MULTIPLIER=2.0

# Maximum retry delay in seconds
MAX_RETRY_DELAY=60.0

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================

# Database URL (SQLite for development, PostgreSQL for production)
# SQLite example: sqlite:///./data/voice_ai.db
# PostgreSQL example: postgresql://user:password@localhost/voice_ai
DATABASE_URL=sqlite:///./data/voice_ai.db

# Database connection pool size (for PostgreSQL)
DB_POOL_SIZE=10

# Database connection pool overflow (for PostgreSQL)
DB_POOL_OVERFLOW=20

# =============================================================================
# REDIS CONFIGURATION (for caching and session management)
# =============================================================================

# Redis URL for caching and session storage
# Example: redis://localhost:6379/0
REDIS_URL=redis://localhost:6379/0

# Redis connection timeout in seconds
REDIS_TIMEOUT=5

# =============================================================================
# MONITORING AND OBSERVABILITY
# =============================================================================

# Enable Prometheus metrics collection (true/false)
ENABLE_METRICS=true

# Prometheus metrics port
METRICS_PORT=9090

# Sentry DSN for error tracking (optional)
# Get from: https://sentry.io/
SENTRY_DSN=

# Sentry environment name
SENTRY_ENVIRONMENT=development

# Enable structured logging (true/false)
STRUCTURED_LOGGING=true

# Log file path (leave empty to log to stdout only)
LOG_FILE_PATH=./logs/voice-ai-agent.log

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================

# Secret key for session management (generate a random string)
SECRET_KEY=your-secret-key-here-change-this-in-production

# Enable CORS (true/false)
ENABLE_CORS=true

# Allowed CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080

# Enable API rate limiting (true/false)
ENABLE_RATE_LIMITING=true

# Rate limit: requests per minute per IP
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# AUDIO PROCESSING CONFIGURATION
# =============================================================================

# Audio sample rate (Hz) - standard telephony is 8000 or 16000
AUDIO_SAMPLE_RATE=16000

# Audio channels (1 for mono, 2 for stereo) - use 1 for telephony
AUDIO_CHANNELS=1

# Audio bit depth (16 or 24) - use 16 for telephony
AUDIO_BIT_DEPTH=16

# Audio buffer size in milliseconds
AUDIO_BUFFER_MS=100

# Voice Activity Detection threshold (0.0 to 1.0)
VAD_THRESHOLD=0.5

# =============================================================================
# CONVERSATION CONFIGURATION
# =============================================================================

# Default system prompt for the AI assistant
SYSTEM_PROMPT="You are a helpful AI assistant speaking over the phone. Keep responses concise and natural for voice conversation."

# Maximum tokens per response
MAX_RESPONSE_TOKENS=150

# Temperature for AI responses (0.0 to 2.0)
AI_TEMPERATURE=0.7

# Enable conversation logging (true/false)
ENABLE_CONVERSATION_LOGGING=true

# Conversation log retention days
CONVERSATION_LOG_RETENTION_DAYS=30

# =============================================================================
# DEVELOPMENT AND TESTING
# =============================================================================

# Enable test mode (true/false) - uses mock services
TEST_MODE=false

# Mock API responses for development (true/false)
MOCK_API_RESPONSES=false

# Enable request/response logging for debugging (true/false)
DEBUG_API_CALLS=false

# Webhook URL for testing notifications (optional)
TEST_WEBHOOK_URL=

# =============================================================================
# BACKUP AND RECOVERY
# =============================================================================

# Enable automatic database backups (true/false)
ENABLE_AUTO_BACKUP=true

# Backup interval in hours
BACKUP_INTERVAL_HOURS=24

# Number of backup files to retain
BACKUP_RETENTION_COUNT=7

# Backup storage path
BACKUP_PATH=./backups/